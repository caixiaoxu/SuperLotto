<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.lsy.superlotto.fragments.SingleTicketViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/single_ticket"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_single_lotto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:visibility="@{0 == viewModel.mSingleList.size()?View.GONE:View.VISIBLE}" />

        <include
            android:id="@+id/view_single_empty"
            layout="@layout/view_ticket_empty"
            android:visibility="@{0 == viewModel.mSingleList.size()?View.VISIBLE:View.GONE}"
            tools:visibility="gone" />
    </LinearLayout>
</layout>
